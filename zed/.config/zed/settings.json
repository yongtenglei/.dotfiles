{
  "icon_theme": "Catppuccin Mocha",
  "vim_mode": true,
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "ui_font_size": 14,
  "buffer_font_size": 14,
  "theme": {
    "mode": "system",
    "light": "Catppuccin Mocha",
    "dark": "One Dark"
  },
  "active_pane_modifiers": {
    "border_size": 5.0,
    "inactive_opacity": 0.85
  },
  "auto_install_extensions": {
    "html": true,
    "dockerfile": true,
    "docker-compose": true
  },
  "autosave": {
    "after_delay": {
      "milliseconds": 1000
    }
  },
  "restore_on_startup": "last_session",
  "buffer_font_family": "CaskaydiaCove Nerd Font Mono",
  "buffer_font_features": {
    "liga": true,
    "calt": true,
    "cv01": 7
  },
  // "buffer_font_fallbacks": ["Nerd Font"],
  "ui_font_family": "CaskaydiaCove Nerd Font Mono",
  "ui_font_features": {
    "liga": true,
    "calt": true,
    "cv01": 7
  },
  // "ui_font_fallbacks": ["Nerd Font"],
  "centered_layout": {
    "left_padding": 0.2,
    "right_padding": 0.2
  },
  "minimap": {
    "show": "auto",
    "thumb": "always",
    "thumb_border": "left_open",
    "current_line_highlight": "all"
  },
  "tabs": {
    "close_position": "right",
    "file_icons": true,
    "git_status": true,
    "activate_on_close": "history",
    "show_close_button": "hover",
    "show_diagnostics": "all"
  },
  "format_on_save": "on", // off
  "always_treat_brackets_as_autoclosed": true,
  "file_types": {
    "Dockerfile": ["Dockerfile*"]
  },
  "diagnostics": {
    "include_warnings": true,
    "inline": {
      "enabled": false,
      "update_debounce_ms": 150,
      "padding": 4,
      "min_column": 0,
      "max_severity": null
    },
    "update_with_cursor": false,
    "primary_only": false,
    "use_rendered": false
  },
  "git": {
    "git_gutter": "tracked_files",
    "gutter_debounce": 100,
    "inline_blame": {
      "enabled": true,
      "delay_ms": 500,
      "show_commit_summary": true
    },
    "hunk_style": "staged_hollow"
  },
  "indent_guides": {
    "enabled": true,
    "line_width": 1,
    "active_line_width": 1,
    "coloring": "indent_aware",
    "background_coloring": "disabled" // disabled or indent_aware
  },
  "multi_cursor_modifier": "alt",

  "inlay_hints": {
    "enabled": true,
    "show_type_hints": true,
    "show_parameter_hints": true,
    "show_other_hints": true,
    "show_background": true,
    "edit_debounce_ms": 700,
    "scroll_debounce_ms": 50,
    "toggle_on_modifiers_press": null
  },
  "proxy": "http://127.0.0.1:7899",
  "preview_tabs": {
    "enabled": true,
    "enable_preview_from_file_finder": true,
    "enable_preview_from_code_navigation": true
  },
  "preferred_line_length": 120,
  "remove_trailing_whitespace_on_save": true,
  "use_smartcase_search": true,
  "completions": {
    "words": "fallback",
    "lsp": true,
    "lsp_fetch_timeout_ms": 0,
    "lsp_insert_mode": "replace_suffix"
  },

  "show_whitespaces": "boundary",
  "terminal": {
    "alternate_scroll": "off",
    "blinking": "on", // terminal_controlled or off or on
    "copy_on_select": true,
    "dock": "bottom",
    "default_width": 640,
    "default_height": 320,
    "detect_venv": {
      "on": {
        "directories": [".env", "env", ".venv", "venv"],
        "activate_script": "default"
      }
    },
    "env": {},
    "font_family": "CaskaydiaCove Nerd Font Mono",
    "font_features": {
      "liga": true,
      "calt": true,
      "cv01": 7
    },
    "font_size": null,
    "line_height": "comfortable",
    "option_as_meta": false,
    "button": true,
    "shell": "system",
    "toolbar": {
      "breadcrumbs": true
    },
    "working_directory": "current_project_directory",
    "scrollbar": {
      "show": null
    }
  },
  "project_panel": {
    "button": true,
    "default_width": 240,
    "dock": "left",
    "entry_spacing": "comfortable",
    "file_icons": true,
    "folder_icons": true,
    "git_status": true,
    "indent_size": 20,
    "auto_reveal_entries": true,
    "auto_fold_dirs": true,
    "scrollbar": {
      "show": null
    },
    "show_diagnostics": "all",
    "indent_guides": {
      "show": "always"
    },
    "hide_root": false
  },
  "languages": {
    "Python": {
      "language_servers": ["basedpyright", "!pyright", "ruff"]
    }
  },
  "lsp": {
    "basedpyright": {
      "settings": {
        "basedpyright": {
          "disableOrganizeImports": true,
          "typeCheckingMode": "off",
          "analysis": {
            "autoSearchPaths": true,
            "autoImportCompletions": true,
            "useLibraryCodeForTypes": false,
            "diagnosticMode": "openFilesOnly",
            "inlayHints": {
              "variableTypes": true,
              "callArgumentNames": true,
              "functionReturnTypes": true,
              "genericTypes": false
            }
          }
        }
      }
    }
  }
}

